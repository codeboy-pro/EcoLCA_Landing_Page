{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": "."
  },
  "include": ["src", "App.tsx", "components/Header.tsx", "components/Footer.tsx", "components/HeroSection.tsx", "components/FeaturesSection.tsx", "components/HowItWorksSection.tsx", "components/TestimonialsSection.tsx", "components/TrustSection.tsx", "components/PricingSection.tsx", "components/figma/*.tsx", "components/ui/button.tsx", "components/ui/card.tsx", "components/ui/utils.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "components/ui/!(button|card|utils).tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}